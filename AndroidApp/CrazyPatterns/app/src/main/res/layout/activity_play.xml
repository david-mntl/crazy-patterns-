<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabian.crazypatterns.playActivity"
    android:background="#568057">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/firstScreen"
        android:visibility="visible">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listaPartidas"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:visibility="invisible"
        android:id="@+id/secondScreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lifes"
            android:id="@+id/textView7"
            android:textColor="#000000" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:rating="5"
            android:isIndicator="true"
            style="@style/myRatingBar" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="porcentaje:"
                android:id="@+id/textView8"
                android:textSize="16dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0%"
                android:id="@+id/txtPorcentaje"
                android:textSize="16dp"
                android:textColor="#000000" />

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:id="@+id/bReady"
                android:layout_marginLeft="110dp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:singleLine="true"
            android:id="@+id/inputRegex"
            android:inputType = "textCapCharacters"
            android:background="#ffffff" />

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint 1"
            android:id="@+id/txtHint1"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint 2"
            android:id="@+id/txtHint2"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint 3"
            android:id="@+id/txtHint3"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint 4"
            android:id="@+id/txtHint4"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint 5"
            android:id="@+id/txtHint5"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="40px" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:id="@+id/bActualizar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

</RelativeLayout>
