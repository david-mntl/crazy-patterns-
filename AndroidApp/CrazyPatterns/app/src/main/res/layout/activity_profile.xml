<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabian.crazypatterns.profileActivity"
    android:background="#0f65ef">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/textView7"
            android:textSize="56dp"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Change your IP and Port Conection"
            android:id="@+id/textView9"
            android:layout_weight="3.20"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#4186e1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:background="#4186e1"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="IP"
            android:id="@+id/ipLabel"
            android:layout_row="1"
            android:layout_column="6"
            android:textSize="30dp"
            android:gravity="center_horizontal|bottom"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp" />

        <EditText
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:id="@+id/ipEntry"
            android:layout_row="0"
            android:layout_column="8"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:textAlignment="textStart"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout7"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:background="#4186e1"
        android:id="@+id/linearLayout8">

        <TextView
            android:layout_width="74dp"
            android:layout_height="49dp"
            android:text="Port"
            android:id="@+id/portLabel"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/portEntry"
            android:layout_weight="1"
            android:background="#ffffff"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4186e1"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/linearLayout8"
        android:layout_alignEnd="@+id/linearLayout8"
        android:id="@+id/linearLayout9">

        <TextView
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:text="Nickname"
            android:id="@+id/textView11"
            android:textSize="32dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignRight="@+id/linearLayout9"
        android:layout_alignEnd="@+id/linearLayout9"
        android:background="#4186e1">

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/nickEntry"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textAlignment="center"
            android:singleLine="true" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Done"
        android:id="@+id/doneButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:onClick="doneActivity" />

</RelativeLayout>
