<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabian.crazypatterns.statsActivity"
    android:background="#e28a3d">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="178dp"
            android:layout_height="60dp"
            android:id="@+id/btnGeneral"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/general"
            android:layout_toLeftOf="@+id/btnChallenge"
            android:layout_toStartOf="@+id/btnChallenge" />

        <ImageButton
            android:layout_width="179.8dp"
            android:layout_height="60dp"
            android:id="@+id/btnChallenge"
            android:layout_alignBottom="@+id/btnGeneral"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/challenge" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnGeneral">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="NÂº"
                android:id="@+id/textView12"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     RegEx"
                android:id="@+id/textView14"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="16dp" />

            <ListView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/listID"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="-10dp" />

            <ListView
                android:layout_width="150dp"
                android:layout_height="425dp"
                android:id="@+id/listRegEx"
                android:layout_row="1"
                android:layout_column="1"
                android:visibility="visible" />

            <ListView
                android:layout_width="100dp"
                android:layout_height="425dp"
                android:id="@+id/listWinner"
                android:layout_row="1"
                android:layout_column="2"
                android:visibility="visible" />

            <ListView
                android:layout_width="100dp"
                android:layout_height="425dp"
                android:id="@+id/listAttempts"
                android:layout_row="1"
                android:layout_column="3"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Winner"
                android:id="@+id/textView15"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Tries"
                android:id="@+id/txt"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="16dp" />

        </GridLayout>

    </RelativeLayout>
</RelativeLayout>